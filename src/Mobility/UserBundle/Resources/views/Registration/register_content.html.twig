{% trans_default_domain 'FOSUserBundle' %}

<form class="mobility-form" method="post" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }}>
    {% form_theme form ':Form:form_errors.html.twig' %}
    
    {{ form_errors(form) }}
    
    <p>
        {{ form_label(form.email) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </p>
    
    <p>
        {{ form_label(form.username) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr': {'autocomplete': 'off'}}) }}
    </p>
    
    <p>
        {{ form_label(form.plainPassword.first) }}
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'autocomplete': 'off'}}) }}
    </p>
    
    <p>
        {{ form_label(form.plainPassword.second) }}
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second) }}
    </p>
    
    {{ form_rest(form) }}
    
    <input class="btn btn-primary push" type="submit" value="{{ 'registration.submit'|trans }}" />
</form>
