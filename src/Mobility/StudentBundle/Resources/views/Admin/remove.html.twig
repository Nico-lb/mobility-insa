{% extends "MobilityStudentBundle:Admin:studentLayout.html.twig" %}

{% block page_title %}{{ parent() }} - Supprimer un étudiant{% endblock %}

{% block content_body %}
    <div class="text-center">
        <p>Vous êtes sur le point de supprimer l'étudiant "{{ student.surname|title }} {{ student.firstname|title }}".</p>
        
        <p>
            <a href="{{ path('student_remove_confirm', {'id': student.id, 'token': csrf_token('remove_student')}) }}" class="btn btn-danger">Confirmer</a>
            <a href="{{ path('student_list') }}" class="btn btn-default">Annuler</a>
        </p>
    </div>
{% endblock %}